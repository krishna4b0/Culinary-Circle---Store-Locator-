<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Parbase"
    title="Button Row Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="cq:Widget"
            title="Button Row"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <share
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Whether or not social media sharing buttons should be included"
                    fieldLabel="Share"
                    inputValue="true"
                    name="./share"
                    type="checkbox"
                    xtype="selection"/>
                <print
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Whether or not a print button should be included."
                    fieldLabel="Print"
                    inputValue="true"
                    name="./print"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </title>
    </items>
</jcr:root>
