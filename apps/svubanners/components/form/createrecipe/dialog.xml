<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Parbase"
    title="My Recipe Form Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="cq:Widget"
            title="My Recipe Form"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <categories
                    jcr:primaryType="cq:Widget"
                    fieldDescription="This selection drives which recipe categories will be populated with the selectable sub categories."
                    fieldLabel="Selectable Categories"
                    name="./categories"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        options="$PATH.categoryoptions.json"
                        type="select"
                        width="200"
                        xtype="dropdown"/>
                </categories>
            </items>
        </title>
    </items>
</jcr:root>
