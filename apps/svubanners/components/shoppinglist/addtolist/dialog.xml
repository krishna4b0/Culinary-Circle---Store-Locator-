<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Parbase"
    title="CTA Button Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="cq:Widget"
            title="Add to List"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <itemName
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The name of the item to be added"
                    fieldLabel="Item Name"
                    name="./itemName"
                    xtype="textfield"/>
                <style
                    jcr:primaryType="cq:Widget"
                    defaultValue="button"
                    fieldDescription="The button's style.  options: Button, Link"
                    fieldLabel="Button Style"
                    name="./style"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <button
                            jcr:primaryType="nt:unstructured"
                            text="Button"
                            value="button"/>
                        <link
                            jcr:primaryType="nt:unstructured"
                            text="Link"
                            value="link"/>
                    </options>
                </style>
            </items>
        </title>
    </items>
</jcr:root>
