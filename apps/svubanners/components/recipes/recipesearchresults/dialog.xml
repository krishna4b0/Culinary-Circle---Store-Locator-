<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Parbase"
    title="Recipe Search Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="cq:Widget"
            title="Recipe Search Results"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <viewRecipePath
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The path to the page for viewing the full recipe."
                    fieldLabel="View Recipe Page Path"
                    name="./viewRecipePath"
                    xtype="pathfield"/>
                <brands
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Enter the brands to filter, separated by a comma"
                    fieldLabel="Brands"
                    name="./brands"
                    xtype="textarea"/>
            </items>
        </title>
    </items>
</jcr:root>
