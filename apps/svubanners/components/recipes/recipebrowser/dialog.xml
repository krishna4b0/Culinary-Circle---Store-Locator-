<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Parbase"
    title="Recipe Browser Component"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <title
            jcr:primaryType="cq:Widget"
            title="Browse Recipes"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <viewRecipePath
                    jcr:primaryType="cq:Widget"
                    fieldDescription="The path to the page for viewing recipe category results."
                    fieldLabel="Browse Recipe Page Path"
                    name="./browsePath"
                    xtype="pathfield"/>
                <titleColor
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Select the color code for the title label."
                    fieldLabel="Title color"
                    name="./titleColor"
                    options="$PATH.titlecoloroptions.json"
                    type="select"
                    xtype="selection"/>
                <categoryColor
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Select the color code for the categories label."
                    fieldLabel="Category color"
                    name="./categoryColor"
                    options="$PATH.categorycoloroptions.json"
                    type="select"
                    xtype="selection"/>
            </items>
        </title>
    </items>
</jcr:root>
